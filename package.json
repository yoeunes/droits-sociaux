{
  "name": "droits-sociaux",
  "version": "1.0.0",
  "description": "Simulateurs Sociaux Maroc - CNSS, CMR, CNOPS - Plateforme independante de simulation des droits sociaux",
  "author": "Simulateurs Sociaux Maroc",
  "license": "MIT",
  "type": "module",
  "homepage": "https://github.com/your-username/droits-sociaux#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/droits-sociaux.git"
  },
  "scripts": {
    "setup": "bundle install && npm install",
    "dev": "concurrently \"npm run vite:dev\" \"npm run jekyll:serve\"",
    "build": "npm run jekyll:clean && npm run jekyll:build && npm run vite:build",
    "vite:dev": "vite build --watch --mode development",
    "vite:build": "vite build --mode production",
    "jekyll:serve": "bundle exec jekyll serve --livereload --open-url",
    "jekyll:build": "JEKYLL_ENV=production bundle exec jekyll build",
    "jekyll:clean": "bundle exec jekyll clean",
    "start": "npm run build && npx serve _site -p 4000",
    "clean": "rm -rf _site .jekyll-cache node_modules/.cache _data/assets.json",
    "deploy": "npm run build && echo 'Site built successfully!'",
    "preview": "vite preview"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "cssnano": "^6.1.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "cnss",
    "cmr",
    "cnops",
    "morocco",
    "maroc",
    "pension",
    "retraite",
    "social-security",
    "simulator"
  ]
}
